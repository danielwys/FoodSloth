extends ../mainLayout

block layout-content
  div.View.RiderView
    h1.Banner What would you like to do?
      
    h2.Message
        table 
            tr
                th= "Current Order"

        table
            tr
                th= "Past Orders"
                th= "Your Information"
            tr
                td= ""
                    div.NavButtons
                        a(href="/rider/orders")
                            div.NavButton View Past Orders

                td= ""
                    body Availability: #{availability}
                    br
                    body Type: #{type}
                    br
                    body Rating: #{rating}
                    br
                    body Base Salary: #{salary}
                    br
                    body Commission: #{commission}

    div.NavButtons
      a(href="/")
        div.NavButton Logout