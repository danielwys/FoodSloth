extends layout

block layout-content
  div.View.UserView
    h1.Banner Howdy, #{userProfile.nickname}!
    div.CenteredMessage
      h2(text-align:center) Add your new menu item here
      form(method='POST' action='' onsubmit="this.submit(); this.reset(); return false;")
        div.form-add-menu

          input(class="form-menu-item" type="text" name = "food" placeholder="Food Name" required autofocus)
          input(class="form-menu-item" type="number" name = "price" placeholder="Price" min="1" step="any" required autofocus)
          input(class="form-menu-item" type="number" name = "avail" placeholder="Availability" min="1" required autofocus)
          input(class="form-menu-item" type="number" name = "limit" placeholder="Limit" required autofocus)
          input(class="form-menu-item" type="text" name = "cat" placeholder="Category" required autofocus)
          <br>
          input(class="form-menu-item" type="submit" value="Submit")
    div.NavButtons
      a(href="/restaurant-dashboard")
        div.NavButton Back
