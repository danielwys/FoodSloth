extends ../layout

block layout-content
  div.View.RestaurantView
    h1.Banner Howdy!
    div.Message
      div.Title
        h2 Your details
        table
            tr
              th= 'Reward Points'
              th= 'Credit Card Number'
            tr
              td= rewardPoints
              td= creditcardnumber
        table
          tr
            th= 'Address'
          each add in address
            tr
              td=add.addresstext+' S'+add.postalcode+' ['+add.area+']'

    <br>
    div.Message
      div.Title
        h2 Edit profile?
        <br>
        div.NavButtons
          a(href="/customer/updateCreditcardnumber")
            div.NavButton Update Credit Card Number
          <br>
          <br>
          a(href="/customer/addAddress")
            div.NavButton Add Address

    div.NavButtons  
      a(href="/customer/home")
        div.NavButton Back