extends ../layout

block layout-content
  div.View.UserView
    h1.Banner Satisfy your craving!
    div.Message
      div.Title
        h1 Make your order from 
        h2 #{Restaurant}
        <br>
        table
            tr
                th= 'Item'
                th= 'Qty'
            tr
                each rec in orderItems
                    tr
                        td=rec.item
                        td=rec.quantity
                td=''
                    div.dropdown
                        form(action='/selectItems' method="post")
                            select(name='dropDown1', id='')
                                each it in Items
                                    option=it.foodname+' (Max: '+it.maxavailable+')'
                            <br>
                            select(name='dropDown2', id='')
                                each qt in Array.from(Array(20).keys())
                                    option=qt
                            input(type='submit', value='Add')        
        a(href="/newOrder3")
            div.NavButton Next 
    div.NavButtons  
      a(href="/customer/newOrder")
        div.NavButton Back